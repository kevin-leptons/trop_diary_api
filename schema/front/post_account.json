{
    "$id": "//trop/front/post_account",
    "req": {
        "body": {
            "type": "object",
            "additionalProperties": false,
            "required": ["email", "password", "role"],
            "properties": {
                "email": {"$ref": "//atom/email"},
                "password": {"$ref": "//atom/password"},
                "role": {"$ref": "//atom/account_role"}
            }
        }
    },
    "res": {
        "body": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "_id": {"$ref": "//atom/account_id"}
            }
        }
    }
}
