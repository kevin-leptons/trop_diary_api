{
    "$id": "//trop/front/post_token_res",
    "body": {
        "type": "object",
        "additionalProperties": false,
        "required": ["token"],
        "properties": {
            "type": {
                "type": "string",
                "pattern": "^bearer$"
            },
            "expires_in": {"$ref": "//atom/uint"},
            "access_token": {"$ref": "//atom/jwt"},
            "refresh_token": {"$ref": "//trop/front/refresh_token"}
        }
    }
}
